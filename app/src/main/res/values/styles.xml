<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>


    <!-- Buttons. -->
    <style name="buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginTop">@dimen/padding</item>
        <item name="android:layout_marginLeft">@dimen/padding</item>
        <item name="android:layout_marginRight">@dimen/padding</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/button_text_size</item>
     </style>

    <!-- Layouts. -->
    <style name="scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- Descriptions. -->
    <style name="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/descriptin</item>
        <item name="android:padding">@dimen/layout_margin</item>
    </style>

    <style name="image">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


</resources>
